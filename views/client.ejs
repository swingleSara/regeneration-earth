<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-1">
      <!--Left half-->
      <div id="left-col" class="d-flex justify-content-center align-items-center h-100 col-6 fixed-top bkg">
        <div class="mt-3 mb-3 fnt-wht">
          <form action="/file/getClient" enctype="multipart/form-data" method="GET">
            <div class="mb-3">
              <label for="code" class="form-label">Code</label>
              <input type="text" class="form-control bkg-light" id="code" name="code">
            </div>
            <div class="mb-3">
              <label for="word" class="form-label">Word</label>
              <input type="text" class="form-control bkg-light" id="word" name="word">
            </div>
            <div class="mb-3">
            <button type="submit" class="btn btn-lg form-control">Submit</button>
          </form>
        </div>
      </div>
    <!--Right half--> 
    <div class="d-flex justify-content-center align-items-center h-100 col-6 fixed-top offset-sm-6">
      <div class="container">
        <div><% if (pair) { %>
          <div class="text-center"><button type="submit" class="btn btn-lg btn-index"><a class="link-wishes" href="<%=pair.link %>">My Final Wishes</a></button></div>
          <% } else { %>
          <div class="div text-center">Invalid Pair</div>
          <% } %>
        </div>
      </div>
    </div>    
  </div>
</div>
<%- include('partials/footer') -%>
