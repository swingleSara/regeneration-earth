<%- include('partials/header') -%>
<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="d-flex justify-content-center align-items-center bkg-fade p-3 rounded">
    <div>
      <form action="/file/getClient" enctype="multipart/form-data" method="GET">
        <div class="mb-3">
          <label for="code" class="form-label d-flex justify-content-center text-center bkg-mid switch">Code</label>
          <input type="text" class="form-control-lg bkg-light" id="code" name="code">
        </div>
        <div class="mb-3">
          <label for="word" class="form-label d-flex justify-content-center bkg-mid switch">Word</label>
          <input type="text" class="form-control-lg bkg-light" id="word" name="word">
        </div>
        <div class="d-flex justify-content-center">
        <button type="submit" class="btn form-control-lg form-label d-flex justify-content-center align-items-center" data-bs-toggle="collapse" data-bs-target="#linkBtn">Submit</button>
      </form>
    </div>
    <div id="linkBtn" class="collapsed">
      <% if (pair) { %>
          <div class="text-center"><button type="submit" class="btn btn-lg btn-index"><a class="link-wishes" href="<%=pair.link %>">My Final Wishes</a></button></div>
      <% } %>
    </div>
  </div>
</div>
<%- include('partials/footer') -%>